{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "version": "{{env `VERSION`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-0c1704bac156af62c",
      "instance_type": "m5.xlarge",
      "ssh_username": "ubuntu",
      "ami_name": "ordinary-experts-patterns-discourse-{{user `version`}}-{{isotime \"20060102-0304\"}}",
      "launch_block_device_mappings": [{
        "device_name": "/dev/sda1",
        "volume_type": "gp2",
        "volume_size": 20,
        "delete_on_termination": true
      }]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./packer/ubuntu_2004_preinstall.sh"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./packer/ubuntu_2004_appinstall.sh"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./packer/ubuntu_2004_postinstall.sh"
    }
  ],
  "post-processors": [
    [
      {
        "output": "manifest.json",
        "strip_path": true,
        "type": "manifest"
      }
    ]
  ]
}
